@using IMHO.Models
@model Post
@{
}
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<h1> New Post</h1>
<h2>Welcome @ViewData["Name"]
	, NameIdentifier seems to be: @ViewData["NameIdentifier"]</h2>
<form method="post" asp-controller="Post" asp-action="NewPost">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Make a new post</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Body"></label>
			<input asp-for="Body" class="form-control" />
			<span asp-validation-for="Body" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Tags"></label>
			<input asp-for="Tags" class="form-control" />
			<span asp-validation-for="Tags" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ChannelId"></label>
			<input asp-for="ChannelId" class="form-control" />
			<span asp-validation-for="ChannelId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Post
		</button>
	</div>

</form>
@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
}
