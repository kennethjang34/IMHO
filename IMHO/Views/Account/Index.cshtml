@using IMHO.Models
@model IEnumerable<Account>
	@{
	ViewData["Title"]="Index";
	}

	<!--<partial name="_Notification" />-->
	<div class="container p-3">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">Account List</h2>
			</div>
			<div class="col-6 text-end"><a asp-controller="Account" asp-action="Create" class="btn btn-primary"><i
						class="bi bi-plus-circle"></i> &nbsp;Create New Account</a></div>
		</div>
	</div>
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Account Name</th>
				<th>Display Order</th>
				<th></th>
			</tr>
		</thead>
		<tbody>@foreach(var obj in Model){<tr>
				<td width="50%">@obj.Username</td>
				<td width="30%">@obj.LastName</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Account" class="btn btn-primary mx-2"><i
								class="bi bi-pencil-square"></i>Edit</a>
						<a asp-controller="Account" class="btn btn-danger mx-2"><i
								class="bi bi-trash-fill"></i>Delete</a>
					</div>
				</td>
			</tr>}</tbody>
	</table>
